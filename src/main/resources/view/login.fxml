<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="root_pane" alignment="CENTER" styleClass="grid_pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.LoginController" prefHeight="750.0" prefWidth="1100.0">
    <!-- Define column constraints for a proportional layout -->
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>
    <!-- Define row constraints for spacing and proportional height -->
    <rowConstraints>
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
    </rowConstraints>

    <children>
        <!-- Title Label -->
        <HBox alignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="1">
            <children>
                <Label text="Manager Login" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #111386;" />
            </children>
        </HBox>

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <!-- Username -->
                <Label text="Username:" style="-fx-font-size: 16px;" />
                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-border-color: BLACK;" />

                <!-- Password with toggle -->
                <Label text="Password:" style="-fx-font-size: 16px;" />
                <HBox spacing="5" alignment="CENTER">
                    <children>
                        <!-- Hidden password field -->
                        <PasswordField fx:id="passwordField" promptText="Enter your password" visible="true" />
                        <!-- Visible password field (hidden by default) -->
                        <TextField fx:id="passwordVisibleField" promptText="Enter your password" visible="false" />
                        <!-- Toggle button -->
                        <Button fx:id="togglePasswordButton" onAction="#togglePasswordVisibility" text="Show" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <children>
                <!-- Login Button -->
                <Button fx:id="loginBtn" text="Login" onAction="#login" style="-fx-background-color: GREEN; -fx-text-fill: WHITE; -fx-border-color: BLACK;" prefWidth="150.0" />
                <!-- Sign Up Button -->
                <Button fx:id="signUpButton" text="Sign Up" onAction="#signUp" style="-fx-background-color: RED; -fx-text-fill: WHITE; -fx-border-color: BLACK;" prefWidth="150.0" />
            </children>
        </VBox>
    </children>
</GridPane>

